#tleap.in
logFile data/interim/refactor-test/65/H2O/1_make_topology/leap.log
source libs/forcefields/leaprc.protein.ff14SB_noterminal
source leaprc.water.tip3p
ramp=loadpdb data/interim/refactor-test/65/H2O/0_pre_topology/4amb_noH.pdb

bond ramp.1.N ramp.12.C

saveAmberParm ramp data/interim/refactor-test/65/H2O/1_make_topology/mc_gas.prmtop data/interim/refactor-test/65/H2O/1_make_topology/mc_gas.inpcrd

savepdb ramp data/interim/refactor-test/65/H2O/1_make_topology/mc_gas.pdb

saveMol2 ramp data/interim/refactor-test/65/H2O/1_make_topology/mc_gas.mol2 0

charge ramp


    # neutralize system. this will create 1 Warning...
    addIons ramp Na+ 0
    addIons ramp Cl- 0
    

check ramp


solvateOct ramp TIP3PBOX 12.0

# add solvent
# addIonsRand ramp Na+ 19 Cl- 19

#check ramp

saveamberparm ramp data/interim/refactor-test/65/H2O/1_make_topology/mc_sol.prmtop data/interim/refactor-test/65/H2O/1_make_topology/mc_sol.inpcrd

savepdb ramp data/interim/refactor-test/65/H2O/1_make_topology/mc_sol.pdb

quit
